set recolor-darkcolor  "#2E3440"
set recolor-lightcolor "#ECEFF4"
set recolor true
set statusbar-bg "#2E3440"
set statusbar-fg "#ECEFF4"
set statusbar-home-tilde true
set default-bg "#ECEFF4"
set default-fg "#2E3440"

map <A-u> set "recolor-darkcolor '#ECEFF4'"
map <A-i> set "recolor-lightcolor '#2E3440'"
map u set "default-fg '#ECEFF4'"
map i set "default-bg '#2E3440'"